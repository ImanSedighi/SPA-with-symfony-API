{% trans_default_domain 'FOSUserBundle' %}

<i class="mb-4 fas fa-sign-in-alt font-80 text-center text-muted"></i>

{% if error %}
    <small class="text-danger mb-2">
        <i class="fas fa-exclamation-circle pr-1"></i>
        {{ error.messageKey|trans(error.messageData, 'security') }}
    </small>
{% endif %}

<form class="" action="{{ path("fos_user_security_check") }}" method="post">
    {% if csrf_token %}
        <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
    {% endif %}

    <div class="form-group">
        <label for="username">{{ 'security.login.username'|trans }}</label>
        <input class="form-control" type="text" id="username" name="_username" value="{{ last_username }}" required="required" autocomplete="username" />
    </div>

    <div class="form-group">
        <label for="password">{{ 'security.login.password'|trans }}</label>
        <input class="form-control" type="password" id="password" name="_password" required="required" autocomplete="current-password" />
    </div>

    <div class="form-check">
        <input class="form-check-input" type="checkbox" id="remember_me" name="_remember_me" value="on" />
        <label class="form-check-label" for="remember_me">{{ 'security.login.remember_me'|trans }}</label>
    </div>

    <div class="mt-3">
        <button type="submit" class="btn btn-primary btn-block" id="_submit" name="_submit">{{ 'security.login.submit'|trans }}</button>
    </div>
</form>